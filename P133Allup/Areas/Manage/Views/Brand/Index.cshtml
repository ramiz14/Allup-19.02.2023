@model IEnumerable<Brand>

@{
    ViewData["Title"] = "Index";
    int count = 0;
}
<h1 class="h3 mb-4 text-gray-800">Brands Page</h1>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Created At</th>
                    <th>Created By</th>
                    <th>Product Count</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Brand brand in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@brand.Name</td>
                        <td>@brand.CreatedAt</td>
                        <td>@brand.CreatedBy</td>
                        <td>@brand.Products.Count()</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

